<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:glide="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/material_component_lists_single_line_height"
        android:background="?attr/selectableItemBackground"
        android:paddingLeft="@dimen/material_component_lists_icon_left_padding"
        android:paddingRight="@dimen/material_component_lists_right_padding">

        <ImageView
            android:id="@+id/iv_thumbnail_cabor_settings"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@color/colorAccent" />

        <TextView
            android:id="@+id/tv_nama_cabor_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="56dp"
            android:text="@string/caborBasket"
            android:textColor="@color/material_light_black"
            android:textSize="14sp" />

    </RelativeLayout>
</layout>