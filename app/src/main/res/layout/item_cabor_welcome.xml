<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cabor_welcome"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/spacing_small"
    android:clickable="true"
    android:background="@drawable/background_selected">

    <ImageView
        android:id="@+id/welcome_cabor_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@drawable/ic_action_basket"
        android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/welcome_cabor_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="@string/caborBasket" />

</LinearLayout>