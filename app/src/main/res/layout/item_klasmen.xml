<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_klasemen"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="1">

    <ImageView
        android:id="@+id/fakultas_favorite"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/itemKlasmen_nama"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.35"
        android:layout_marginTop="@dimen/spacing_verysmall"
        android:layout_marginBottom="@dimen/spacing_verysmall"
        android:padding="@dimen/spacing_small"
        tools:text="Lorem ipsum dolor sit amet" />

    <TextView
        android:id="@+id/itemKlasmen_gold"
        android:layout_width="8dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.15"
        android:gravity="center"
        android:layout_marginTop="@dimen/spacing_verysmall"
        android:layout_marginBottom="@dimen/spacing_verysmall"
        android:padding="@dimen/spacing_small"
        tools:text="0" />

    <TextView
        android:id="@+id/itemKlasmen_silver"
        android:layout_width="8dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.15"
        android:gravity="center"
        android:layout_marginTop="@dimen/spacing_verysmall"
        android:layout_marginBottom="@dimen/spacing_verysmall"
        android:padding="@dimen/spacing_small"
        tools:text="0" />

    <TextView
        android:id="@+id/itemKlasmen_bronze"
        android:layout_width="8dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.15"
        android:gravity="center"
        android:layout_marginTop="@dimen/spacing_verysmall"
        android:layout_marginBottom="@dimen/spacing_verysmall"
        android:padding="@dimen/spacing_small"
        tools:text="0" />

    <TextView
        android:id="@+id/itemKlasmen_total"
        android:layout_width="8dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.15"
        android:gravity="center"
        android:layout_marginTop="@dimen/spacing_verysmall"
        android:layout_marginBottom="@dimen/spacing_verysmall"
        android:padding="@dimen/spacing_small"
        tools:text="0" />
</LinearLayout>